<%- include('partials/header') %>
<a href="/dashboard" role="button"><button class="btn dash">Dashboard</button></a>
<div class="centered">
  <div class="container">

    <h1 class="dashboard-header" ><%= username %> </h1>
    <h3 class="depp"><%= depp %> </h3>
    <!-- <h3 class="depp"><%= mailto %> </h3> -->

    <button class="image-b"><a href = "mailto: <%=mailto%> " style="color: black;">Send Email</a></button>

    <% listItem.forEach(element => { %>
       <%if(element.comment == "Comment about your memories with me , Describe Me in your own words"){%>
          <h2><%=element.comment %></h2>
       <% }else{ %>
          <div class="comment-box">
            <p class="comment-theme"><%=element.comment %></p>
            <form action="/delete" method="POST">
              <button class="delete" type="submit" name="com" value='<%= element.by %>' >🗑️</button>
              <input type="hidden" name="comm" value='<%= element.comment %>'></input>
            </form>
            <a class="by-tag" href="/<%= element.by %> "><button class="del-btn">- <%=element.by%></button></a>
          </div>
       <% } %>
    <%});%>


    
    <form action="/secrets" method="POST">

      <div class="form-group">
        <textarea cols="60" rows="7.5" class="form-control" name="comment" placeholder="&#10;       WHAT'S YOUR MOST MEMORABLE EXPERIENCE WITH ME?&#10;    IF U COULD GO BACK & CHANGE A MOMENT WHAT WOULD IT BE?&#10;&#10;&#10;                      Comment on <%= username %>&#10;"></textarea>
      </div>
      <input class="sub" type="submit" value="Submit">
    </form>

    <a  href="/photos"><button class="image-b">Images</button></a>

    <h4 style="margin-top:40px;">Uplaod Images</h4>
    <form action="/uploadphoto" enctype="multipart/form-data" method="POST">
      <input type="file" name="image" accept="image/*">
      <input type="submit" value="Upload Photo">
    </form>


    <p class="secret-text"></p>
    <hr>


    
    <!-- <a class="btn" href="/logout" role="button">Log Out</a>
    <a class="btn" href="/submit" role="button">Submit a Secret</a> -->
  </div>
</div>


<%- include('partials/footer') %>
